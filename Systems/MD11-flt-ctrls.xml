<?xml version="1.0"?>

<PropertyList>

    <filter>
	<name>Aileron Control</name>
	<debug>false</debug>
	<type>gain</type>
	<gain>1.0</gain>
	
	<input>
	    <expression>
		<pow>
		    <property>controls/flight/aileron</property>
		    <value>3</value>
		</pow>
	    </expression>
	</input>
	<output>controls/flight/aileron-pos</output>
    </filter>

    <filter>
	<name>Elevator Control</name>
	<debug>false</debug>
	<type>gain</type>
	<gain>1.0</gain>
	
	<input>
	    <expression>
		<pow>
		    <property>controls/flight/elevator</property>
		    <value>3</value>
		</pow>
	    </expression>
	</input>
	<output>controls/flight/elevator-pos</output>
    </filter>


</PropertyList>
